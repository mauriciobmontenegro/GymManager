<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
        type="url" 
        name="avatar_url"
        placeholder="http://"
        value="{{ student.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
        type="text" 
        name="name"
        value="{{ student.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
        type="email" 
        name="email"
        value="{{ student.email }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
        type="date" 
        name="birth"
        value="{{ student.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span><input type="radio" name="gender" value="M" {% if student.gender == 'M' %}checked{% endif %}>Masculino</span>
        <span><input type="radio" name="gender" value="F" {% if student.gender == 'F' %}checked{% endif %}>Feminino</span>
    </div>
</div>

<div class="item">
    <div>Ano escolar</div>
    <div>
        <select name="schoolyear">
            <option value="5F"{% if student.blood == "5F" %}selected{% endif %}>5º ano do ensino fundamental</option>
            <option value="6F"{% if student.blood == "6F" %}selected{% endif %}>6º ano do ensino fundamental</option>
            <option value="7F"{% if student.blood == "7F" %}selected{% endif %}>7º ano do ensino fundamental</option>
            <option value="8F"{% if student.blood == "8F" %}selected{% endif %}>8º ano do ensino fundamental</option>
            <option value="1M"{% if student.blood == "1M" %}selected{% endif %}>1º ano do ensino médio</option>
            <option value="2M"{% if student.blood == "2M-" %}selected{% endif %}>2º ano do ensino médio</option>
            <option value="3M"{% if student.blood == "3M" %}selected{% endif %}>3º ano do ensino médio</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Carga horária semanal</div>
    <div>
        <input 
        type="number" 
        name="hoursperweek"
        value="{{ student.hoursperweek }}"
        >
    </div>
</div>

<button type="submit">Salvar</button>