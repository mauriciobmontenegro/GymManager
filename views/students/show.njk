{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Membro</div>
            <div>{{ student.name }}</div>
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>{{ student.email }}</div>
        </div>

        <div class="item">
            <div>Aniversário</div>
            <div>{{ student.birth }}</div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>{{ "Masculino" if student.gender == "M" else "Feminino" }}</div>
        </div>

        <div class="item">
            <div>Ano escolar</div>
            <div>{{ student.schoolyear }}</div>
        </div>

        <div class="item">
            <div>Carga horária semanal</div>
            <div>{{ student.hoursperweek }}</div>
        </div>

        <a href="/students/{{ student.id }}/edit" class="button">Editar</a>

    </section>
</div>
{% endblock content %}