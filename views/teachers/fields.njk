<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
        type="url" 
        name="avatar_url"
        placeholder="http://"
        value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
        type="text" 
        name="name"
        placeholder="Nome do professor"
        value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
        type="date" 
        name="birth"
        value="{{ teacher.age }}"
        >
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="degree">
            <option value="EM"{% if teacher.degree == "EM" %}selected{% endif %}>Ensino Médio Completo</option>
            <option value="ES"{% if teacher.degree == "ES" %}selected{% endif %}>Ensino Superior Completo</option>
            <option value="ME"{% if teacher.degree == "ME" %}selected{% endif %}>Mestrado</option>
            <option value="DR"{% if teacher.degree == "DR" %}selected{% endif %}>Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span><input type="radio" name="spot" value="offline" {% if student.gender == 'offline' %}checked{% endif %}>Presencial</span>
        <span><input type="radio" name="spot" value="online" {% if student.gender == 'online' %}checked{% endif %}>À distância</span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input 
        type="text" 
        name="services"
        placeholder="Separe os serviços prestados por vírgula"
        value="{{ teacher.services }}"
        >
    </div>
</div>

<button type="submit">Salvar</button>